<UserControl x:Class="SIL.Cog.Presentation.Views.SegmentsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:xcdg="http://schemas.xceed.com/wpf/xaml/datagrid"
             xmlns:c="clr-namespace:SIL.Cog.Presentation.Controls"
             xmlns:vm="clr-namespace:SIL.Cog.Applications.ViewModels;assembly=SIL.Cog.Applications"
             mc:Ignorable="d" d:DataContext="{d:DesignInstance vm:SegmentsViewModel}"
             d:DesignHeight="300" d:DesignWidth="300" Loaded="OnLoaded" DataContextChanged="OnDataContextChanged">
	<DockPanel>
		<TextBlock Style="{StaticResource ViewTitleStyle}" DockPanel.Dock="Top">Segments</TextBlock>
		<xcdg:DataGridControl x:Name="SegmentsDataGrid" Margin="0,10,0,0" SynchronizeSelectionWithCurrent="True" SynchronizeCurrent="True"
							  SelectionUnit="Cell" SelectionMode="Single" AutoCreateColumns="False" ItemScrollingBehavior="Immediate" ReadOnly="True">
			<xcdg:DataGridControl.Resources>
				<Style TargetType="xcdg:RowSelector" BasedOn="{StaticResource {x:Type xcdg:RowSelector}}" >
					<Setter Property="Content" Value="{Binding DataContext}" />
					<Setter Property="ContentTemplate">
						<Setter.Value>
							<DataTemplate DataType="{x:Type vm:SegmentsVarietyViewModel}">
								<TextBlock><Hyperlink Command="{Binding SwitchToVarietyCommand}"><Run Text="{Binding Name, Mode=OneWay}" /></Hyperlink></TextBlock>
							</DataTemplate>
						</Setter.Value>
					</Setter>
				</Style>
			</xcdg:DataGridControl.Resources>
			<xcdg:DataGridControl.View>
				<xcdg:TableView UseDefaultHeadersFooters="False">
					<xcdg:TableView.FixedHeaders>
						<DataTemplate>
							<c:MergedHeadersPanel />
						</DataTemplate>
						<DataTemplate>
							<xcdg:ColumnManagerRow AllowColumnReorder="False" />
						</DataTemplate>
					</xcdg:TableView.FixedHeaders>
				</xcdg:TableView>
			</xcdg:DataGridControl.View>
		</xcdg:DataGridControl>
	</DockPanel>
</UserControl>
