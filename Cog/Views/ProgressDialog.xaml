<Window x:Class="SIL.Cog.Views.ProgressDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding DisplayName}" ShowInTaskbar="False" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" Loaded="Window_Loaded" SizeToContent="WidthAndHeight">
    <StackPanel HorizontalAlignment="Center" Margin="10" >
        <ProgressBar Value="{Binding Value}" Width="250" Height="20" />
        <Button IsCancel="True" Margin="0,5,0,0" Width="70">Cancel</Button>
    </StackPanel>
</Window>
